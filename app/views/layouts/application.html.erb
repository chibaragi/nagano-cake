<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header class="navbar navbar-fixed-top">
      <div class="container">
        <nav class="nav navbar-brand navbar-left header-logo">
          <span><%#= image_tag('nagano_cafe_logo.PNG', class: 'shop_logo') %>NaganoCake</span>
        </nav>
            <% if client_signed_in? %>

               <%= render 'layouts/header_client' %>

            <% elsif admin_signed_in? %>
              <%= render 'layouts/header_admin' %>
            <% else %>
              <%= render 'layouts/header_logout' %>
            <% end %>
      </div>
    </header>
    <main>
      <div class="container main-container">
        <% flash.each do |message_type, message| %>
          <div class="alert alert-<%= message_type %>">
            <%= message %>
          </div>
        <% end %>  

        <%# 各ページ本体 %>
        <%= yield %>
      </div>
    </main>
    <footer>
      <div class="container">
        <div class="row">
          <div class="col-xs-3 col-xs-offset-9">
            <p>CopyRight nagano-cafe.inc</p>
          </div>
        </div>
      </div>
    </footer> 
  </body>
