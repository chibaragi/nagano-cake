<div class="row">
    <div class="col-xs-3">
        <%= render "genre_serch_form" %>
    </div>
	<div class="col-xs-9">
		<h2>商品一覧<%= "全#{Product.count}件" %></h2>
		<% @products.each do |product| %>
		    <div class="product-box">
                <table class="table">
                    <tr>
    				    <th><%= link_to product_path(product) do %>
                            <%= attachment_image_tag(product, :image, :fill, 140, 100, fallback: "no_image.jpg") %>
    				        <% end %>
                        </th>
                    </tr>
                    <tr>
                        <th><%= link_to product.name, product_path(product) %></th>
                    </tr>
                    <tr>
                        <th><%= (product.price * 1.1).to_i %>円（税込）</th>
                    </tr>
                </table>
		    </div>
    	<% end %>
    	<%= paginate @products %>
	</div>
</div>
