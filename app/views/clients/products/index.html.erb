<div class="row">
    <%= render 'genre_serch_form' %>
	<div class="col-xs-9">
		<h2><%= @genre %><span><%= "全#{@products.count}件" %></span> </h2>
		<% @products.each do |product| %>
    		    <div class="product-box">
    		    	<%= link_to user_path(book.user) do %>
					<%= attachment_image_tag(product, :image, :fill, 100, 100, fallback: "no_image.jpg") %>
					<% end %>
                    <%= link_to product.name, product_path(product) %>
                    <%= product.price %>
    		    </div>
    	<% end %>
    	<%= paginate @products %>
	</div>
</div>
