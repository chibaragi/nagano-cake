<div class="row">
	<div class="col-xs-3">
	</div>
	<div class="col-xs-4">
		<div class="product-image">
			<%= attachment_image_tag(@product, :image, :fill, 250, 200, fallback: "no-image.jpg") %>
		</div>
	</div>
	<div class="col-xs-5">
		<div class="detail">
			<h2><%= @product.name %></h2>
			<p><%= @product.explanation %></p>
			<h3><%= (@product.price * 1.1).to_i %><span>（税込）</span></h3>
		</div>
		<div>
		<%= form_for @inside_carts, :url => {controller: "inside_carts", action: "index"} do |f| %>
			<%= f.label :quantity, "個数選択" %>
			<%= f.number_field :quantity, min: 1, max: 100 %>
			<%= f.submit "カートに入れる", class: "btn btn-primary" %>
		<% end %>
		</div>
	</div>
</div>