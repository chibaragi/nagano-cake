<div class="row">
<div class="style= margin-top: 50px;">
<h2>配送先登録/一覧</h2>

<%= form_for(@shipping_address) do |f| %>
	<%#= render "layouts/error_messages", model: f.object %>
	<p>郵便番号(ハイフンなし)</p>
	<%= f.text_field :postal_code %>
	<p>住所</p>
	<%= f.text_area :street_address %>
	<p>宛名</p>
	<%= f.text_area :receive_name %>

	<%= f.submit "登録する", class: "btn btn-primary" %>
<% end %>

<table class="container">
	<thead>
		<tr>
			<th>郵便番号</th>
			<th>住所</th>
			<th>宛名</th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	<tbody>
		<% @shipping_addresses.each do |shipping_address|  %>
			<tr>
				<td><%= shipping_address.postal_code %></td>
				<td><%= shipping_address.street_address %></td>
				<td><%= shipping_address.receive_name %></td>
				<td><%= link_to "編集する", edit_shipping_address_path(shipping_address.id),class: "btn btn-primary"%></td>
				<td><%= link_to "削除する", shipping_address_path(shipping_address.id),  class: "btn btn-danger", method: :delete %></td>
			</tr>
		<% end %>
	</tbody>
	
</table>
</div>
</div>