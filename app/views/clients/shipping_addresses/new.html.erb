<div class="row login-row">
	<div class="style= margin-top: 50px;">
		<h2>配送先登録/一覧</h2>
		<%# 以下、最後まで飯田が編集しました！！！！！！！ %>
		<%= form_for(@shipping_address) do |f| %>
			<div class="field">
				<label class="postal-code-label">郵便番号(ハイフンなし)</label>
				<%= f.text_field :postal_code, autofocus: true, class:"" %>
			</div>
			<div class="field">
				<label class="address-label">住所</label>
				<%= f.text_field :street_address, autofocus: true, class:"", size:"60*60" %>
			</div>
				<div class="field">
			<label class="address-label">宛名</label>
				<%= f.text_field :receive_name, autofocus: true, class:"", size:"30*30" %>
			</div>
			<%= f.submit "登録する", class: "btn btn-success submit" %>
		<% end %>
		<table class="table table-bordered address-table">
			<thead>
				<tr class="table-head" style="background-color:#F5F5F5;">
					<th>郵便番号</th>
					<th>住所</th>
					<th>宛名</th>
					<th>&nbsp;</th>
					<th>&nbsp;</th>
				</tr>
			</thead>
			<tbody>
				<% @shipping_addresses.each do |shipping_address|  %>
					<tr>
						<td><%= shipping_address.postal_code %></td>
						<td><%= shipping_address.street_address %></td>
						<td><%= shipping_address.receive_name %></td>
						<td><%= link_to "編集する", edit_shipping_address_path(shipping_address.id),class: "btn btn-primary"%></td>
						<td><%= link_to "削除する", shipping_address_path(shipping_address.id),  class: "btn btn-danger", method: :delete %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>