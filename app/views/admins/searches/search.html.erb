<div class="container">
  <!--product一覧 -->
  <% if @range == '2' %>
    <h2>Product search for ' <%= @word %> '</h2>
    <table class="table table-hover table-inverse">
    <thead>
      <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td><%= link_to product.name, admins_product_path(product) %></td>
        <td><%= product.price %></td>
        <td><%= product.genre.name %></td>
        <td>
          <% if product.is_enabled  == true %>
          販売中
          <% else %>
          販売停止中
          <% end %>
        </td>
      </tr>
      <% end %>
      </tbody>
    </table>
    <%# clients一覧  %>
    <% else %>
      <h2>Clients search for ' <%= @word %> '</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @clients.each do |client| %>
            <tr>
              <td><%= client.id %></td>
              <td><%= client.first_name %><%= client.last_name %></td>
              <td><%= client.email %></td>
              <td><% if client.deleted_at == nil %>
                  <a>有効会員</a>
              <% else %>
                  <a>無効会員</a>
              <% end %>
              </td>
              <td><%= link_to "Show", admins_client_path(client) %></td>
            </tr>
          <% end %>
      </tbody>
    </table>
  <% end %>
</div>
