<h2>ジャンル一覧・追加</h2>

<%= form_for(@genre, url:'/admins/genres') do |f| %>

	<p>ジャンル</p>
	<%= f.text_field :name %>

	<%= f.radio_button :is_enabled, "true" %> 有効　
	<%= f.radio_button :is_enabled, "faulse" %> 無効

	<%= f.submit '追加', class: 'btn btn-default' %>
<%end%>

<table>
	<thead>
		<tr>
			<th>ジャンル</th>
			<th>状態</th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	<tbody>
		<% @genres.each do |genre| %>
			<tr>
				<td><%= genre.name %></td>
				<td><%= genre.is_enabled %></td>
				<td><%= link_to "編集する", edit_admins_genre_path(genre.id), class: 'btn btn-default' %></td>
			</tr>
		<% end %>
	</tbody>
</table>