<div class="row">
    <h2>商品編集</h2>
    <%= form_with(model: @product ,url: admins_product_path(@product), method: :patch, local: true) do |f| %>
    <div class="col-xs-5">
    	<div class="field">
            <%= attachment_image_tag(@product, :image, :fill, 250, 200, fallback: "no_image.jpg") %>
    		<%= f.label :image %>
            <%= f.attachment_field :image %>
    	</div>
    </div>
    <div class="col-xs-7">
            <div class="field">
            	<%= f.label :商品名 %>
            	<%= f.text_field :name, class: "form" %>
            </div>
            <div class="field">
            	<%= f.label :商品説明 %>
            	<%= f.text_area :explanation %>
            </div>
            <div class="field">
            	<%= f.label :ジャンル %>
            	<%= f.collection_select(:genre_id, Genre.all, :id, :name, prompt: "選択してください") %>
            </div>
            <div class="field">
            	<%= f.label :税抜価格 %>
            	<%= f.text_field :price %>
            	円
            </div>
            <div class="field">
            	<%= f.radio_button :is_enabled, true %>
            	<%= f.label :is_enabled, "販売中" %>
                <%= f.radio_button :is_enabled, false %>
                <%= f.label :is_enabled, "販売停止中" %>
            </div>
            <div class="actions col-xs-3 col-xs-offset-4">
    		<%= f.submit "変更を保存", class: "btn btn-success glyphicon glyphicon-save" %>
            </div>
        <% end %>
    </div>
</div>