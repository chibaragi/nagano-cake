<div class = "body" style>
	<div class = "container">
		<h2><%= @client.first_name %><%= @client.last_name %>さんの会員情報編集</h2>

			<%= form_for [:admins,@client] do |f| %>
			<div class="field">
              <%= f.label :会員ID %><br>
                <%= @client.id %>&ensp;
                <% if @client.deleted_at == nil %>
                  <a>有効会員</a>
                <% else %>
                  <a>無効会員</a>
                <% end %>
              </div>

			<div class="field">
			    <%= f.label :名前 %><br>
			    <%= f.label :（姓） %>
			    <%= f.text_field :first_name, autofocus: true, autocomplete: "email" %>
			    <%= f.label :（名） %>
			    <%= f.text_field :last_name, autofocus: true, autocomplete: "email" %>
			 </div>

			 <div class="field">
			    <%= f.label :フリガナ %><br />
			    <%= f.label :（セイ） %>
			    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "email" %>
			    <%= f.label :（メイ） %>
			    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "email" %>
			 </div>

			 <div class="field">
			    <%= f.label :郵便番号（ハイフンなし） %><br />
			    <%= f.text_field :postal_code, autofocus: true, autocomplete: "email" %>
			 </div>

			 <div class="field">
			    <%= f.label :住所 %><br />
			    <%= f.text_field :street_address, autofocus: true, autocomplete: "email" %>
			 </div>

			 <div class="field">
			    <%= f.label :電話番号（ハイフンなし） %><br />
			    <%= f.text_field :phone_number, autofocus: true, autocomplete: "email" %>

			 <div class="field">
			    <%= f.label :メールアドレス %><br />
			    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
			 </div>

			 <div class="field">
			    <%= f.label :会員ステータス %><br>
			 	<label><%= f.radio_button :deleted_at,  value: "", checked: true %>有効</label>
			 	<label><%= f.radio_button :deleted_at, value: Time.now %>退会済み</label>
			 </div>

			    <%= f.submit "編集内容を保存する", class: "btn btn-primary"%>

			 </div>
		<% end %>
	</div>
</div>